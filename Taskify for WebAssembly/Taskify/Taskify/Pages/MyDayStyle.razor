@namespace Taskify
@inherits StyleComponentBase

    <Styled Name="MyDay">

        .MyDay-Root {
        height: 100vh;
        display: flex;
        flex-direction: row;
        overflow: hidden;
        padding: 30px;
        background-color: light-gray;
        }


        .MyDay-Middle-Container {
        display: flex;
        flex-grow: 1;
        flex-direction: column;
        }

        .MyDay-Content-Container {
        flex: 1;
        min-height: 0;
        display: flex;
        flex-flow: row nowrap;
        transition: all 195ms cubic-bezier(0.0, 0, 0.2, 1) 0ms;
        }

        .MyDay-Content {
        max-height: 100%;
        overflow-y: auto;
        flex-grow: 1;
        transition: all 195ms cubic-bezier(0.0, 0, 0.2, 1) 0ms;
        }

        .MyDay-Footer {
        width: auto;
        border: none;
        height: 52px;
        display: flex;
        padding: 0 8px;
        align-items: center;
        }

    </Styled>


