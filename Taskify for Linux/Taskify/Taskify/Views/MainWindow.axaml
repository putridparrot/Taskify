<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Taskify.ViewModels;assembly=Taskify"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Taskify.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Taskify.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Taskify">

  <Grid RowDefinitions="*" ColumnDefinitions="200,Auto,*">
    <views:NavigationListView Grid.Row="0" Grid.Column="0" DataContext="{Binding NavigationList}" />
    <GridSplitter Grid.Row="0" Grid.Column="1" Background="LightGray" Width="10" />
    <views:TaskListView Grid.Row="0" Grid.Column="2" Margin="10"/>
  </Grid>

</Window>
